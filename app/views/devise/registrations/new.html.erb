<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2">Sign up</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="field">
            <div class="control">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "input" },
                        label_html: { class: "label" },
                        wrapper: false,
                        error: false %>
            </div>
            <% unless resource.errors[:email].empty? %>
              <p class="help is-danger">Please enter a valid e-mail.</p>
            <% end %>
          </div>

          <div class="field">
            <div class="control">
            <%= f.input :username,
                        required: true,
                        input_html: { autocomplete: "username", class: "input" },
                        label_html: { class: "label" },
                        wrapper: false,
                        error: false %>
            </div>
            <% unless resource.errors[:username].empty? %>
              <p class="help is-danger">The username is taken or empty.</p>
            <% end %>
          </div>

          <div class="field">
            <div class="control">
            <%= f.input :password,
                        required: true,
                        input_html: { autocomplete: "new-password", class: "input" },
                        label_html: { class: "label" },
                        wrapper: false,
                        error: false %>
            </div>
            <% unless resource.errors[:password].empty? %>
              <p class="help is-danger">The password is too short, minimum 6 characters.</p>
            <% end %>
          </div>

          <div class="field">
            <div class="control">
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password", class: "input" },
                        label_html: { class: "label" },
                        wrapper: false,
                        error: false %>
            </div>
            <% unless resource.errors[:password_confirmation].empty? %>
              <p class="help is-danger">The passwords do not match.</p>
            <% end %>
          </div>

          <div class="field">
            <div class="control">
              <%= f.button :submit, "Sign up", class: "button is-primary" %>
            </div>
          </div>
        <% end %>
        <br />
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>