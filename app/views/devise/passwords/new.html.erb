<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2">Forgot your password?</h2>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

          <div class="field">
            <div class="control">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "input" },
                        label_html: { class: "label" },
                        wrapper: false,
                        error: false %>
            </div>
            <% unless resource.errors[:email].empty? %>
              <p class="help is-danger">Please enter a valid e-mail.</p>
            <% end %>
          </div>

          <div class="field">
            <div class="control">
            <%= f.button :submit, "Send me reset password instructions", class: "button is-primary" %>
            </div>
          </div>
        <% end %>
        <br />
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>