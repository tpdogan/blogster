<article class='<%= "tile is-child article #{boxClass} box p-2" %>'>

  <%= link_to 'Read more', article_path(article), class: 'button is-success is-light article__readme' %>
  <%= link_to article.author.username, articles_path(:author => article.author.username), class: 'button is-warning is-light article__author' %>

  <img class='article__image' src=<%= article.image %> alt=<%= article.title %>>
  <div class='article__inner'>
    <div class='article__title'><%= article.title %></div>
    <div class='article__body'><%= article.body %></div>
  </div>
</article>